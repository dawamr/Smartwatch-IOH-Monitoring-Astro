---
import Layout from '../../layouts/Layout.astro';
import Sidebar from '../../components/Sidebar.astro';
import Header from '../../components/Header.astro';
import { devices } from '../../data/mock-data';

const { id } = Astro.params;
const user = devices.find(device => device.id === id);

if (!user) {
  return Astro.redirect('/404');
}
---

<Layout title={`${user.name} - Smartwatch Monitoring Solution`}>
  <Sidebar />
  <Header title="User Details" />
  
  <main class="ml-64 pt-16 p-6">
    <div class="max-w-4xl mx-auto">
      <!-- User Header -->
      <div class="bg-white rounded-lg shadow mb-6">
        <div class="p-6">
          <div class="flex items-center space-x-4">
            <div class="w-20 h-20 bg-gray-200 rounded-full flex items-center justify-center">
              <span class="text-2xl text-gray-600 font-medium">{user.name?.charAt(0)}</span>
            </div>
            <div>
              <h1 class="text-2xl font-semibold">{user.name}</h1>
              <p class="text-gray-500">{user.source_name}</p>
              <div class="mt-2 flex items-center space-x-2">
                <span class={`px-2 py-1 text-sm rounded-full ${
                  user.status === 'active'
                    ? 'bg-green-100 text-green-800'
                    : 'bg-red-100 text-red-800'
                }`}>
                  {user.status}
                </span>
                <span class="text-gray-400">â€¢</span>
                <span class="text-gray-600">{user.email_pic}</span>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- User Stats -->
      <div class="grid grid-cols-3 gap-6 mb-6">
        <div class="bg-white p-6 rounded-lg shadow">
          <h3 class="text-lg font-semibold mb-2">Device Status</h3>
          <p class="text-3xl font-bold text-green-500">Active</p>
        </div>
        <div class="bg-white p-6 rounded-lg shadow">
          <h3 class="text-lg font-semibold mb-2">Last Active</h3>
          <p class="text-3xl font-bold">2h ago</p>
        </div>
        <div class="bg-white p-6 rounded-lg shadow">
          <h3 class="text-lg font-semibold mb-2">Total Time Active</h3>
          <p class="text-3xl font-bold">127h</p>
        </div>
      </div>

      <!-- Recent Activity -->
      <div class="bg-white rounded-lg shadow">
        <div class="p-6">
          <h2 class="text-lg font-semibold mb-4">Recent Activity</h2>
          <div class="space-y-4">
            <div class="flex items-center justify-between py-2">
              <div class="flex items-center space-x-3">
                <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center">
                  <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                  </svg>
                </div>
                <div>
                  <p class="font-medium">Device Connected</p>
                  <p class="text-sm text-gray-500">Connected to smartwatch</p>
                </div>
              </div>
              <span class="text-sm text-gray-500">2 hours ago</span>
            </div>
            <div class="flex items-center justify-between py-2">
              <div class="flex items-center space-x-3">
                <div class="w-8 h-8 bg-green-100 rounded-full flex items-center justify-center">
                  <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
                <div>
                  <p class="font-medium">Health Data Synced</p>
                  <p class="text-sm text-gray-500">Successfully synced health data</p>
                </div>
              </div>
              <span class="text-sm text-gray-500">3 hours ago</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>